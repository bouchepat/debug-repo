{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "baseUrl": ".",
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5",
        "skipLibCheck": true,
        "stripInternal": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noEmitHelpers": false,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "node",
            "meteor",
            "crypto-js",
            "jquery",
            "meteor-roles",
            "systemjs",
            "tether"
        ]
    },
    "exclude": [
        "node_modules",
        ".meteor"
    ],
    "compileOnSave": false
}